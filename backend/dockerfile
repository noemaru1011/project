# ==========================================
# 1. Base Stage (共通のベース環境)
# ==========================================
FROM node:22.2-slim AS base

# Prismaに必要なシステムライブラリをインストール
RUN apt-get update -y && apt-get install -y openssl && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# ==========================================
# 2. Dependencies Stage (依存関係のインストール)
# ==========================================
FROM base AS dependencies

# 設定ファイルのコピー
COPY package.json package-lock.json tsconfig.json ./
COPY backend/package.json backend/package-lock.json backend/tsconfig.json ./backend/
COPY shared ./shared

# 依存関係のインストール
RUN npm ci

# ==========================================
# 3. Development Stage (開発用)
# ==========================================
FROM dependencies AS development

WORKDIR /app/backend
ENV NODE_ENV=development

# 開発時はソースをマウントするため、Prisma Clientの生成のみ行う
COPY backend/prisma ./prisma
RUN npx prisma generate

EXPOSE 3000
CMD ["npm", "run", "dev"]

# ==========================================
# 4. Build Stage (本番用ビルド)
# ==========================================
FROM dependencies AS build

WORKDIR /app
COPY backend/src ./backend/src
COPY backend/prisma ./backend/prisma

WORKDIR /app/backend
RUN npx prisma generate
RUN npm run build

# 本番に不要な依存関係を削除
WORKDIR /app
RUN npm prune --production

# ==========================================
# 5. Production Stage (本番実行用)
# ==========================================
FROM base AS production

WORKDIR /app
ENV NODE_ENV=production

# ビルド成果物と依存関係をコピー
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/backend/dist ./dist
COPY --from=build /app/backend/package.json ./package.json
COPY --from=build /app/backend/prisma ./prisma

EXPOSE 3000
CMD ["node", "dist/backend/src/server.js"]

